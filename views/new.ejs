<% include partials/header %>
        <div class="container">
            <div class="row">
                <div class="col">
                    <% include partials/nav %>
                    <h3>Add a new user</h3>
                    <form action="/new" class="user-form m-1" method="post">
                        <div class="form-row m-1">
                            <label for="name">Name: </label>
                            <input class='form-control' id='name' type="text" name="name" placeholder="">
                        </div>
                        <div class="form-row m-1">
                            <label for="age">Age: </label>
                            <input class='form-control' id='age' type="text" name="age" placeholder="">
                        </div>
                        <div class="form-row justify-content-end m-2">
                            <button type="submit" class="btn btn-primary">Add new user</button>
                        </div>
                    </form>
                </div>
                <div class="row">
                    <div class="col">
                        <% if(messages.create_error) { %>
                            <% for (const key of messages.create_error) { %>
                                <h4 style="color: pink"><%= key %></h4>
                            <% } %>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
<% include partials/footer %>